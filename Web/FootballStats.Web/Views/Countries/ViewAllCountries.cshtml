@model FootballStats.Web.ViewModels.Countries.CountriesListViewModel
@{
    this.ViewData["Title"] = "All countries";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    @foreach (var country in Model.CountryList)
    {
        <div class="media col-6">
            <img class="mr-3" src="@country.UrlImage" alt="Generic placeholder image">
            <div class="media-body">
                <h5 class="mt-0">@country.Name</h5>
                Abbreviation: @country.Abbreviation
                <p><a class="btn btn-primary" asp-controller="Countries" asp-action="CountryById" asp-route-id="@country.Id">More details for country</a></p>
            </div>
        </div>
    }
</div>

